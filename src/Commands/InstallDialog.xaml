<Window x:Class="PackageInstaller.InstallDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Install package" Height="142" Width="471" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <ComboBox x:Name="cbType" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="75" />
        <ComboBox x:Name="cbName" VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Recycling" Margin="90,20,135,0" VerticalAlignment="Top" IsEditable="True" TextBoxBase.TextChanged="cbName_TextChanged">
            <ComboBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel/>
                </ItemsPanelTemplate>
            </ComboBox.ItemsPanel>
        </ComboBox>
        <ComboBox x:Name="cbVersion" HorizontalAlignment="Right" Margin="0,20,10,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" IsEditable="True" IsEnabled="False">
            <ComboBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel/>
                </ItemsPanelTemplate>
            </ComboBox.ItemsPanel>
        </ComboBox>
        <Button x:Name="btnInstall" Content="Install" HorizontalAlignment="Right" Margin="0,0,100,10" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="btnInstall_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" IsCancel="True"/>

    </Grid>
</Window>
